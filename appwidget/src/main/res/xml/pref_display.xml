<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
      android:order="2"
      android:title="@string/pref_title_category_display">

    <ListPreference
        android:key="@string/pref_key_night_mode"
        android:title="@string/pref_title_night_mode"
        android:summary="%s"
        android:defaultValue="@string/pref_value_night_mode_default"
        android:entryValues="@array/pref_night_mode_values"
        android:entries="@array/pref_night_mode_entries" />

    <ListPreference
        android:key="@string/pref_key_opacity"
        android:title="@string/pref_background_opacity_title"
        android:summary="%s"
        android:defaultValue="@string/pref_value_opacity_50"
        android:entryValues="@array/pref_background_opacity_values"
        android:entries="@array/pref_background_opacity_display_names" />

  </PreferenceCategory>

</PreferenceScreen>
