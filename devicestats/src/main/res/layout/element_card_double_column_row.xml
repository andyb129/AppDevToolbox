<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_row_height"
    android:layout_gravity="center_vertical"
    android:minHeight="@dimen/element_card_row_min_height">

    <TextView
        android:id="@+id/element_card_row_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_header_padding"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/element_card_row_text_size"
        android:textColor="@color/element_card_row_label_text"
        android:textStyle="bold"
        tools:text="MODEL"
        android:textIsSelectable="true"/>
    <ImageView
        android:id="@+id/element_card_row_value_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/card_header_padding"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:gravity="right"
        android:visibility="gone"
        tools:visibility="gone"
        tools:src="@drawable/ic_check_circle_black_24dp"/>
    <TextView
        android:id="@+id/element_card_row_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/card_header_padding"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/element_card_row_label"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/element_card_row_value_text"
        android:textSize="@dimen/element_card_row_text_size"
        android:singleLine="true"
        android:gravity="right"
        tools:text="Nexus 5"
        tools:visibility="visible"
        android:textIsSelectable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/card_divider"/>

</RelativeLayout>
