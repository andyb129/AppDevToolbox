<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_row_height"
    android:layout_gravity="center_vertical"
    android:minHeight="@dimen/element_card_row_min_height">

    <TextView
        android:id="@+id/element_card_row_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_header_padding"
        android:paddingRight="@dimen/card_header_padding"
        android:layout_centerInParent="true"
        android:textColor="@color/element_card_row_value_text"
        android:textSize="@dimen/element_card_row_text_size"
        android:singleLine="true"
        tools:text="Nexus 5"
        android:textIsSelectable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/card_divider"/>

</RelativeLayout>
