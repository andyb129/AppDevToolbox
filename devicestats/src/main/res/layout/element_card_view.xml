<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:showIn="@layout/fragment_stats"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/fragment_stats_header_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/fragment_stats_header_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_header_padding">
                    <TextView
                        android:id="@+id/fragment_stats_header_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        tools:text="@string/card_header_device_info"
                        tools:visibility="visible"/>
                    <TextView
                        android:id="@+id/fragment_stats_header_subtitle_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/element_card_view_subtitle_text"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="@string/card_header_device_info"
                        tools:visibility="visible"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/fragment_stats_header_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/card_divider"
                    tools:visibility="visible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_stats_card_body_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>